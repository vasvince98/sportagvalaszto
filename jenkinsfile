pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            when {
                expression { return env.BRANCH_NAME == 'production' }
            }
            steps {
                echo 'Deploying....'
            }
        }
    }
}
